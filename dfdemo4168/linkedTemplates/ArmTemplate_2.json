							"source": {
								"type": "AzureSqlSource",
								"sqlReaderQuery": "SELECT  *FROM [dbo].[Customer]WHERE [Email] LIKE '%.com';\n",
								"queryTimeout": "02:00:00",
								"partitionOption": "None"
